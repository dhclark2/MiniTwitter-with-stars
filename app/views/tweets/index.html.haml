.page-header
  %i.fa.fa-twitter{"aria-hidden" => "true", style: 'margin-left: 50%; font-size: 90px; color: #0000ff'}

  %h1 Listing tweets

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th #
        %th
          Favorite
          %i.fa.fa-star{"aria-hidden" => "true", style: 'color:#f0C300'}
        %th Good or Bad?
        %th Tweet
        %th User name
        %th Posted
        %th{:colspan => 3} Options

    %tbody
      - @tweets.each_with_index do |tweet, index|
        %tr
          %td
            = index + 1
            \.
          %td
            %p
              -# -# = tweet.starvote
              = link_to starvote_tweet_path(tweet) do
                %i.fa.fa-star-o{"aria-hidden" => "true"}
              -# %em
              -#   _____[
              -#   = tweet.starvote
              -#   ]_____
          %td
            %p
              = tweet.upvote_count
              = link_to upvote_tweet_path(tweet) do
                %i.fa.fa-thumbs-up{"aria-hidden" => "true"}
              %em
                _____[
                = tweet.net_vote
                ]_____
              = link_to downvote_tweet_path(tweet) do
                %i.fa.fa-thumbs-down{"aria-hidden" => "true"}
              = tweet.downvote_count
          %td
            %p
              = link_to tweet.tweet, tweet.link

              %em
                (
                = truncate(tweet.link, length: 8)
                )

          %td= link_to tweet.user_name
          %td= tweet.created_at

          %td
            = link_to tweet do
              %span.glyphicon.glyphicon-ok
          %td
            = link_to edit_tweet_path(tweet) do
              %span.glyphicon.glyphicon-pencil
          %td
            = link_to tweet, data: { confirm: 'Are you sure?' }, method: :delete do
              %span.glyphicon.glyphicon-remove
